# =============================================================================
# VOHRAD BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DB_USER=postgres
DB_NAME=vohrad
DB_PASS=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# For production (docker-compose.prod.yml), these are also needed:
# POSTGRES_USER=postgres
# POSTGRES_DB=vohrad_prod
# POSTGRES_PASSWORD=your_secure_password_here
# PGPASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64 | tr -d "=+/" | cut -c1-64
SECRET_KEY=generate_a_very_long_random_secret_key_min_64_chars

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=generate_a_base64_encryption_key_here

# -----------------------------------------------------------------------------
# JWT CONFIGURATION
# -----------------------------------------------------------------------------
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=keys/jwt_public.pem
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
WEB_COOKIE_MAX_AGE_SECONDS=43200

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Development - allow localhost
CORS_ALLOW_ORIGINS=["http://localhost:8081","http://127.0.0.1:8081","http://192.168.0.127:8081"]

# Production example:
# CORS_ALLOW_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# -----------------------------------------------------------------------------
# STRIPE CONFIGURATION
# -----------------------------------------------------------------------------
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=eur
STRIPE_DAYS_UNTIL_DUE=7

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Vohrad

# -----------------------------------------------------------------------------
# LICENSE CONFIGURATION
# -----------------------------------------------------------------------------
LICENSE_RENEW_URL_TEMPLATE=http://localhost:8081/renew-license?license_key={license_key}

# Production example:
# LICENSE_RENEW_URL_TEMPLATE=https://yourdomain.com/renew-license?license_key={license_key}

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_FILE_PATH=logs/app.log
LOG_ERROR_FILE_PATH=logs/error.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_ECS_FIELDS=true
STRUCTURED_LOGS=true

# -----------------------------------------------------------------------------
# PYTHON CONFIGURATION
# -----------------------------------------------------------------------------
PYTHONPATH=src

# -----------------------------------------------------------------------------
# PRODUCTION-ONLY SETTINGS (not needed for local development)
# -----------------------------------------------------------------------------
# These are set by the deployment script for production:
#
# DOMAIN=yourdomain.com
# CERTBOT_EMAIL=admin@yourdomain.com
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=eu-west-1
